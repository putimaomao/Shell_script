##create a split file from star
relion_star_printtable particles.star data_particles _rlnDefocusU _rlnMicrographName | sort -n | uniq -f 1 | awk '{print $2, $1}' > split_mics_defocus.dat
awk -v n=500 '1; NR % n == 0 {print ""}' split_mics_defocus.dat > split_mics_defocus_group.dat

./relion.make_grouped_star.sh split_mics_defocus_group.dat particles.star particles_groupped.star
